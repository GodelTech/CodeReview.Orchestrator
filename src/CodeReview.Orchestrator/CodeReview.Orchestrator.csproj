<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>GodelTech.CodeReview.Orchestrator</RootNamespace>

    <!-- Package details -->
    <PackageId>GodelTech.CodeReview.Orchestrator</PackageId>
    <PackageTags>.netcore netcore .net codereview</PackageTags>
    <Copyright>Godel Technologies Europe</Copyright>
    <Product>Code Review Orchestration Tool</Product>
    <Company>Godel Technologies Europe</Company>
    <Authors>Andrei Salanoi</Authors>
    <RepositoryUrl>https://github.com/GodelTech/CodeReview.Orchestrator</RepositoryUrl>
    <VersionPrefix>0.1.0</VersionPrefix>
    <PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>

    <!-- SonarQube needs this -->
    <ProjectGuid>{00000000-0000-0000-0000-000000000001}</ProjectGuid>

    <!-- Tool installation package -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>codereview</ToolCommandName>
   
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="Docker.DotNet" Version="3.125.4" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="5.0.0" />
    <PackageReference Include="SharpCompress" Version="0.28.1" />
    <PackageReference Include="YamlDotNet" Version="10.0.0" />
  </ItemGroup>

</Project>
